#!/usr/bin/env node
var debug = require('debug')('LiveWebSystem');
var app = require('../app');
//require('../sockets/base')(io);

app.set('port', process.env.PORT || 3000);

//var server = app.listen(app.get('port'), function() {
//  debug('Express server listening on port ' + server.address().port);
//});

//run socket.io server
var server = require('http').Server(app);
var io = require('socket.io')(server);

var er = server.listen(app.get('port'), function(){
  debug('E3xpress server listening on port ' + er.address().port);
  console.log('listening on *:3000');
});

// audio emitting socket
io.on('connection', function(socket){
  debug('a user connected ' + socket.id);

  socket.on('audio', function(data){
    io.sockets.emit('audio', data);
  });

  socket.on('disconnect', function(){
    debug('Client has disconnected ' + socket.id);
    //io.sockets.emit('user disconnected');
  });

});

